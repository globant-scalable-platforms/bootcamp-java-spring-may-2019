						"id": "723feeec-f19f-4653-9ef8-84579a88cfc7",
						"exec": [
							"pm.test(\"response must be valid and have a body\", function () {\r",
							"    \r",
							"     \r",
							"     pm.response.to.be.ok; // success if status code is 200\r",
							"     \r",
							"     pm.response.to.be.withBody; // response contains a body\r",
							"     \r",
							"     pm.response.to.be.json; // body has json format\r",
							"     \r",
							"     var jsonData = pm.response.json();\r",
							"     \r",
							"     pm.expect(jsonData.results)[0].id.to.eql(\"P435\"); //Is first product id equal to P435\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
